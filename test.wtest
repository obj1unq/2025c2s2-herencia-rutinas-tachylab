import rutinas.*
import personas.*

describe "Test de las Rutinas" {

    test "Running" {
        running.intensidad(1.2)
        assert.equals(360, running.caloriasQuemadasEn(5))
        assert.equals(10200, running.caloriasQuemadasEn(90))
    }

    test "Maraton" {
        maraton.intensidad(1.5)
        assert.equals(900, maraton.caloriasQuemadasEn(5))
        assert.equals(25500, maraton.caloriasQuemadasEn(90))
    }

    test "Remo" {
        assert.equals(520, remo.caloriasQuemadasEn(5))
        assert.equals(9360, remo.caloriasQuemadasEn(90))
    }

    test "Remo de Competicion" {
        assert.equals(510, remoCompeticion.caloriasQuemadasEn(5))
        assert.equals(12750, remoCompeticion.caloriasQuemadasEn(90))
    }
}

describe "Test de las Personas Sedentarias" {
    var calamardo

    test "Test de las Personas Sedentarias - Running" {
        running.intensidad(1.2)
        calamardo = new PersonaSedentaria(peso = 60, tiempoEjercitado = 5)
        calamardo.practicarRutina(running)
        assert.equals(59.948, calamardo.peso())
    }

    test "Test de las Personas Sedentarias - Maraton" {
        maraton.intensidad(1.5)
        calamardo = new PersonaSedentaria(peso = 60, tiempoEjercitado = 5)
        calamardo.practicarRutina(maraton)
        assert.equals(59.871, calamardo.peso())
    }

    test "Test de las Personas Sedentarias - Remo" {
        calamardo = new PersonaSedentaria(peso = 60, tiempoEjercitado = 5)
        calamardo.practicarRutina(remo)
        assert.equals(59.925, calamardo.peso())
    }

    test "Test de las Personas Sedentarias - Remo de Competicion" {
        calamardo = new PersonaSedentaria(peso = 60, tiempoEjercitado = 5)
        calamardo.practicarRutina(remoCompeticion)
        assert.equals(59.927, calamardo.peso())
    }

    test "Test de las Personas Sedentarias - No hace ninguna rutina" {
        running.intensidad(1.2)
        calamardo = new PersonaSedentaria(peso = 40, tiempoEjercitado = 5)
        calamardo.practicarRutina(running)
        assert.equals(40, calamardo.peso())
    }
}